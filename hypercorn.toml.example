# Bind to all interfaces for WSL or Docker use
# bind = ["0.0.0.0:5000"]

# Enable live reload on code changes (useful during development)
# reload = true

# Set the number of worker processes (default: 1)
# workers = 1

# Log level (can be: debug, info, warning, error, critical)
# loglevel = "debug"

# Timeout for graceful shutdowns
# graceful_timeout = 10

# Enable access log (prints each request)
# accesslog = "-"